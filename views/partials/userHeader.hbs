<style>
    .navbar {
        background-color: white;
    }

    #cart {
        top: -106%;
        left: 43px;
    }

    @media (max-width: 992px) {

        .lb {
            width: 100%;
            margin-left: 0px !important;
        }

        .searchBtn {
            position: absolute;
            right: 9px;
        }

        .searchInput {
            width: 100% !important;
        }

        .nav-link:hover {

            background: black;
            color: white !important;
        }

        .nav-link {

            text-align: center;
        }

        #cart {
            top: -118%;
            left: 53%;
        }

        .cli {
            height: 35px !important;
        }
    }
</style>
<nav class="navbar navbar-expand-lg navbar-light ">
    <a class="navbar-brand" href="#"> <img src="/images/logo.png" alt="Logo" width="100%" height="90"
            class="d-inline-block align-top"></a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent"
        aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarSupportedContent" style="justify-content: space-around;">
        <form class="form-inline my-2 my-lg-0" action="/searchUser" method="post">
            <input class="form-control mr-sm-2 searchInput" type="search" placeholder="Search" aria-label="Search"
                style="border-radius: 30px;" name="search">
            <button class="btn btn-dark my-2 my-sm-0 searchBtn" type="submit"
                style="border-radius: 0px 30px 30px 0px;margin-left: -20px;">Search</button>
        </form>

        <ul class="navbar-nav d-flex" style="height: 49px;">
            <li class="nav-item active">
                <a id="homeLink" style="margin-left: 5px;" class="nav-link" href="/home"><i
                        class="fa-solid fa-house"></i></a>
            </li>
            <li class="nav-item ml-2">
                <a id="wishlistLink" class="nav-link" href="#"><i class="fa-solid fa-heart"></i></a>
            </li>
            <li class="nav-item ml-2">
                <a id="profileLink" class="nav-link" href="/profile"><i class="fa-solid fa-user"></i></a>
            </li>
            <li class="nav-item ml-2 cli">
                {{#if count}}
                <a id="cartLink" class="nav-link" href="/cart"><i class="fa-solid fa-cart-shopping"></i></a><span
                    id="cart" class="cart-count">{{count.[0].itemCount}}</span>
                {{else}}
                <a id="cartLink" class="nav-link" href="/cart"><i class="fa-solid fa-cart-shopping"></i></a><span
                    id="cart" class="cart-count" style="background-color: red;">0</span>
                {{/if}}
            </li>
            <li class="nav-item ml-2">
                <a id="walletLink" class="nav-link" href="/getWallet"><i class="fa-solid fa-wallet"></i></a>
            </li>
            {{#if public}}
            <li class="nav-item ml-2">
                <form action="/login" method="get"><button type="submit" class="btn btn-dark lb"
                        style="margin-top: 4px;">LogIn</button></form>
            </li>
            {{else}}
            <li class="nav-item ml-2">
                <form action="/logout" method="get"><button type="submit" class="btn btn-dark lb"
                        style="margin-top: 4px;">LogOut</button></form>
            </li>
            {{/if}}
        </ul>
    </div>
</nav>
<script>
    // JavaScript to replace content inside the <a> tag when screen width is less than 900 pixels
    function updateNavLinkContent() {
        let homeLink = document.getElementById('homeLink');
        let profileLink = document.getElementById('profileLink');
        let cartLink = document.getElementById('cartLink');
        let walletLink = document.getElementById('walletLink');
        let wishlistLink = document.getElementById('wishlistLink');
        if (window.innerWidth <= 991) {
            homeLink.innerHTML = 'Home';
            profileLink.innerHTML = 'Profile';
            cartLink.innerHTML = 'Cart'
            walletLink.innerHTML = 'Wallet'
            wishlistLink.innerHTML = 'wishList'
        } else {
            homeLink.innerHTML = '<i class="fa-solid fa-house"></i>';
            profileLink.innerHTML = '<i class="fa-solid fa-user"></i>';
            cartLink.innerHTML = '<i class="fa-solid fa-cart-shopping"></i>';
            walletLink.innerHTML = '<i class="fa-solid fa-wallet"></i>';
            wishlistLink.innerHTML = '<i class="fa-solid fa-heart"></i>';
        }
    }

    // Call the function on page load and window resize
    window.onload = updateNavLinkContent;
    window.onresize = updateNavLinkContent;
</script>