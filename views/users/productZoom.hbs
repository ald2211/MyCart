<div class="container firstBox">
    <div id="imageCarousel" class="carousel slide" data-bs-ride="carousel">
        <div class="carousel-inner">
            {{#each datas.images}}
            <div class="carousel-item {{#if @first}}active{{/if}}">
                <div class="xzoom-container">
                    <img class="xzoom" src="/croppedImages/{{this}}" alt="Slide {{@index}}">
                </div>
            </div>
            {{/each}}
            <button class="carousel-control-prev" type="button" data-bs-target="#imageCarousel" data-bs-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Previous</span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#imageCarousel" data-bs-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Next</span>
            </button>
        </div>


    </div>
    <div class="  description">
        <h1 style="font-weight:bolder; text-align:center;">{{datas.name}}</h1>
        <p style="text-align:center;">{{datas.description}}</p>
        {{#if datas.ProductDiscountedPrice}}
        <p style="margin-left: 40px; text-align:center;">₹{{datas.ProductDiscountedPrice}}<span
                style="text-decoration: line-through; margin-left: 15px;">₹{{datas.price}}</span></p>
        {{else}}
        <p style="margin-left: 40px; text-align:center;">₹{{datas.price}}</p>
        {{/if}}
        <div>
            <form style="text-align: center; margin-left:25px;" action="/addToCart/{{datas._id}}" method="post"
                onclick="checkStock(event,{{datas.stock}})" id="addForm"><button class="btn btn-primary add">Add to
                    cart</button>
        </div>
    </div>
</div>
</div>
<div class="container">
    <h2 style="color: rgb(13, 159, 159);margin-bottom: 30px; text-align: center; margin-left: 30px;">Book Specification
    </h2>
    <ul class="zoomUl" style="list-style: none; text-align: center;">
        <li>pubisher: {{datas.publisher}}</li>
        <li>published: {{date}}</li>
        <li>Title: {{datas.name}}</li>
        <li>Category: {{datas.category}}</li>
        <li>Author: {{datas.author}}</li>
        <li>Number of Pages: {{datas.pages}}</li>
    </ul>

    <hr class="style-one">
    <h2 style="color: rgb(14, 151, 151);margin-bottom: 30px;text-align: center;">Reviews</h2>
</div>



<script>
    function checkStock(event, count) {
        if (count == 0) {
            event.preventDefault()
            displayMessage('sorry the selected product is out of Stock', 'error-message')
            alert('product is out of stock')
            return;
        }
        document.getElementById('addForm').submit();
        return;
    }
</script>

