    body {
        background-color: #f8f9fa;
    }

   

    .container {
        background-color: #ffffff;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        padding: 20px;
        border-radius: 10px;
        margin-top: 20px;
    }

    h2,
    h1 {
        color: #007bff;
    }

    .breadcrumbs a {
        text-decoration: none;
        color: #007bff;
    }

    .breadcrumbs a:hover {
        color: black;
    }

    .fa-solid,
    .fas {
        font-weight: 900;
        font-size: 30px;
        margin-right: 20px;
        color: black;
    }

    .fa-solid {
        transition: border-bottom 0.1s ease;
    }

    .fa-solid:hover {
        border-bottom: 2px solid #000;
        /* Change the color and thickness as needed */
        padding-bottom: 3px;
        /* Change the color and thickness as needed */
    }

    .cart-count {
        background-color: #23800b;
        color: white;
        border-radius: 28%;
        padding: 0px 6px;
        font-size: 12px;
        position: relative;
        top: 0%;
        left: -18px;
        bottom: 21px;
    }

    .col-md-3 {
        margin-bottom: 3rem;
    }

    .card-header {
        background-color: white;
        border: none;
    }

    .card:hover {
        transform: scale(1.05);
        transition: transform 0.3s ease;
    }


    .carousel-inner {
        width: 250px;
        /* Set your desired fixed width */
        margin: 0 auto;
        /* Center the carousel within the container */
        overflow: hidden;
        /* Hide any overflow beyond the fixed width */
    }

    /* Rest of your existing styles */
    body {
        background: #f8f8f8;
        font-family: 'Arial', sans-serif;
        margin: 0 auto;
        padding: 0;
        max-width: 1200px;
    }

    .firstBox {
        display: flex;
        justify-content: space-around;
        align-items: center;
        padding: 20px;
        background: #fff;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        border-radius: 10px;
    }

    .carousel-item {
        width: 100%;
        /* Set a fixed width for carousel items */
    }

    .xzoom-container {
        overflow: hidden;
    }

    .xzoom-container img {
        width: 100%;
        /* Set the width to fill the container */
        height: auto;
        /* Maintain aspect ratio */
        transition: transform 0.5s;
        /* Add transition for smooth zooming effect */
    }

    .xzoom-container:hover img {
        transform: scale(1.5);
        /* Zoom in when hovering */
    }

    .description {
        flex: 1;
        margin-left: 20px;
        text-align: left;
    }

    .description h1 {
        font-size: 24px;
        font-weight: bold;
        margin-bottom: 10px;
    }

    .description p {
        font-size: 16px;
        line-height: 1.5;
    }

    .add {
        font-size: 18px;
        padding: 15px 30px;
        margin-top: 20px;
        background-color: #3498db;
        color: #fff;
        border: none;
        border-radius: 5px;
        cursor: pointer;
        transition: background-color 0.3s ease;
    }

    .btn:hover {
        background-color: #2980b9;
    }

    hr.style-one {
        border: 0;
        height: 1px;
        background: #333;
        background-image: linear-gradient(to right, #ccc, #333, #ccc);
        margin: 60px 0;
    }

    .zoomUl {
        margin-right: 27px;
        list-style: none;
        text-align: center;
    }

    .zoomUl li {
        line-height: 50px;
    }


    .carousel-control-prev,
    .carousel-control-next {
        color: black;
        /* Set the color of the toggle buttons */
    }

    .carousel-control-prev-icon {
        background-color: rgba(8, 8, 8, 0.5);
        margin-right: 10px;
    }

    .carousel-control-next-icon {
        background-color: rgba(8, 8, 8, 0.5);
        /* Set the background color of the toggle buttons */
        margin-left: 10px;
    }

    .xzoom-container {
        height: 400px;
        width: 100%;
        overflow: hidden;
    }

    .xzoom-container img {
        transition: transform 0.5s;
        /* Add transition for smooth zooming effect */
    }

    .xzoom-container:hover img {
        transform: scale(1.5);
        /* Zoom in when hovering */
    }


    @media (min-width: 200px) and (max-width: 992px) {
        .magnifier {
            left: 2px !important;
        }

        .xzoom {
            margin-top: 40px;
        }

        .description {
            text-align: center;
            margin-right: 0px;
        }

        .firstBox {
            display: flex;
            flex-direction: column;
            align-items: center;
            margin: 0px auto 0;
            padding: 10px;
            width: 100%;
        }

        .description h1 {
            margin: 50px 0 10px 0;
            font-weight: 300;
            text-align: center;
        }

        .navbar-collapse {
            margin-bottom: 360px;
        }
    }
</style>


